{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@watheia/front.atoms": ["apps/thefront-v3/src/components/atoms/index.ts"],
      "@watheia/front.layouts.*": ["apps/thefront-v3/src/layouts/*"],
      "@watheia/front.molecules": ["apps/thefront-v3/src/components/molecules/index.ts"],
      "@watheia/front.organisms": ["apps/thefront-v3/src/components/organisms/index.ts"],
      "@watheia/front.views.*": ["apps/thefront-v3/src/views/*/index.ts"],
      "@watheia/layout": ["libs/ui/layout/src/index.ts"],
      "@watheia/molecular.atoms.dark-mode-toggler": [
        "libs/molecular/atoms/dark-mode-toggler/src/index.ts"
      ],
      "@watheia/molecular.atoms.icon": ["libs/molecular/atoms/icon/src/index.ts"],
      "@watheia/molecular.atoms.icon-text": ["libs/molecular/atoms/icon-text/src/index.ts"],
      "@watheia/molecular.atoms.image": ["libs/molecular/atoms/image/src/index.ts"],
      "@watheia/molecular.atoms.learn-more-link": [
        "libs/molecular/atoms/learn-more-link/src/index.ts"
      ],
      "@watheia/molecular.atoms.scroll-top": [
        "libs/molecular/atoms/scroll-top/src/index.ts"
      ],
      "@watheia/molecular.molecules.count-up-number": [
        "libs/molecular/molecules/count-up-number/src/index.ts"
      ],
      "@watheia/molecular.molecules.description-cta": [
        "libs/molecular/molecules/description-cta/src/index.ts"
      ],
      "@watheia/molecular.molecules.overlapped-images": [
        "libs/molecular/molecules/overlapped-images/src/index.ts"
      ],
      "@watheia/molecular.molecules.section-header": [
        "libs/molecular/molecules/section-header/src/index.ts"
      ],
      "@watheia/molecular.molecules.swiper-image": [
        "libs/molecular/molecules/swiper-image/src/index.ts"
      ],
      "@watheia/molecular.molecules.swiper-number": [
        "libs/molecular/molecules/swiper-number/src/index.ts"
      ],
      "@watheia/molecular.molecules.typed-text": [
        "libs/molecular/molecules/typed-text/src/index.ts"
      ],
      "@watheia/theme.styles.global/*": ["libs/theme/styles/global/src/*"],
      "@watheia/theme.theme-provider": ["libs/theme/theme-provider/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
