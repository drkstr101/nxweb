{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@watheia/components": ["libs/components/src/index.ts"]:
      "@watheia/app.theme.tailwind-styles": [
        "libs/components/src/app/theme/tailwind-styles/index.ts"
      ],
      "@watheia/gfx.icons.facebook": ["libs/components/src/gfx/icons/facebook/index.ts"],
      "@watheia/app.ui.atoms.button": ["libs/components/src/app/ui/atoms/button/index.ts"],
      "@watheia/iron-ui.theme.theme-provider": [
        "libs/components/src/iron-ui/theme/theme-provider/index.ts"
      ],
      "@watheia/iron-ui.theme.brand-definition": [
        "libs/components/src/iron-ui/theme/brand-definition/index.ts"
      ],
      "@watheia/iron-ui.theme.color-definition": [
        "libs/components/src/iron-ui/theme/color-definition/index.ts"
      ],
      "@watheia/iron-ui.theme.fonts.book": [
        "libs/components/src/iron-ui/theme/fonts/book/index.ts"
      ],
      "@watheia/iron-ui.theme.heading-margin-definition": [
        "libs/components/src/iron-ui/theme/heading-margin-definition/index.ts"
      ],
      "@watheia/iron-ui.theme.shadow-definition": [
        "libs/components/src/iron-ui/theme/shadow-definition/index.ts"
      ],
      "@watheia/iron-ui.theme.size-definition": [
        "libs/components/src/iron-ui/theme/size-definition/index.ts"
      ],
      "@watheia/app.utils.style-regexps": [
        "libs/components/src/app/utils/style-regexps/index.ts"
      ],
      "@watheia/catalog": ["libs/catalog/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
